<!-- Mobile Shop -->
<div class="mobile-shop">
    <div class="top-section">
        <div class="container">
            <div class="item-left">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-less-than"></i>
                </a>
            </div>

            <div class="item-middle">
                <p>Best sellers</p>
            </div>

            <div>
                <button type="button" class="shopping-cart-menu position-relative">
                    <i class="fa-light fa-bag-shopping"></i>
                    <span class="badge-pill rounded-pill text-bg-danger ">
                        $10
                    </span>
                </button>
            </div>
        </div>

    </div>

    <div class="shop-buttons">
        <div class="container">
            <div class="filters">
                <button id="filters-button"><i class="fa-light fa-sliders-up"></i></button>
                <p>Filters</p>
                <div id="filters-dropdown" class="filters-dropdown">
                    <ul>
                        <li><button class="filter-button" data-category="category1">Shirts</button></li>
                        <li><button class="filter-button" data-category="category2">Shoes</button></li>
                        <li><button class="filter-button" data-category="category3">Jackets</button></li>
                    </ul>
                </div>
            </div>
            <div class="sort-by">
            <p>Sorting by <button id="sort-by-button"><i class="fa-regular fa-chevron-down"></i></button></p>
            <div id="sort-by-dropdown" class="sort-by-dropdown">
                <ul>
                    <li><button class="sort-option">Lowest Price</button></li>
                    <li><button class="sort-option">Highest Price</button></li>
                    <li><button class="sort-option">Lowest Rated</button></li>
                    <li><button class="sort-option">Highest Rated</button></li>
                </ul>
            </div>
            </div>
        </div>
    </div>

    <div class="shop-items">
        <div class="container">
            <div class="shop-cards">
                <div class="shop-card-1">
                @Html.Partial("_ProductCardPartial")
                </div>
                <div class="shop-card-2">
                @Html.Partial("_ProductCardPartial")
                </div>
                <div class="shop-card-3">
                @Html.Partial("_ProductCardPartialSale")
                </div>
                <div class="shop-card-4">
                @Html.Partial("_ProductCardPartial")
                </div>
                <div class="shop-card-5">
                @Html.Partial("_ProductCardPartial")
                </div>
                <div class="shop-card-6">
                @Html.Partial("_ProductCardPartial")
                </div>
            </div>
        </div>
    </div>
</div>
