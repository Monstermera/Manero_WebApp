<partial name="/Views/Partials/FullScreenComponents/Navbars/_TopNavbar.cshtml" />
@model ProductModel



<section class="d-flex justify-content-center my-5">
    <form class="validate-form" asp-action="AddOrEdit" method="post" novalidate>
        
        @if(Model != null){
            <h2 class="fw-bold text-center">Edit Product</h2>
            if(Model.ArticleNumber != Guid.Empty){
                <input asp-for="ArticleNumber" value="@Model.ArticleNumber" hidden/>
            }
            <p>@Model.ArticleNumber</p>
        } else {
            <h2 class="fw-bold text-center">Add new Product</h2>
        }
        

        <div class="form-input mb-3">
            <fieldset>
                <legend>Name</legend>
                <label class="d-none">Name</label>
                <input asp-for="Name" type="text" required minlength="2">
                <partial name="../Partials/SmallComponents/InputValidation.cshtml" />
            </fieldset>
        </div>
        <div class="form-input mb-3">
            <fieldset>
                <legend>Price</legend>
                <label class="d-none">Price</label>
                <input asp-for="Price" type="text" pattern="^\d{1,3}(?:,\d{1,4})*(\,\d{1,2})?$" required>
                <partial name="../Partials/SmallComponents/InputValidation.cshtml" />
            </fieldset>
        </div>
        <div class="form-textarea mb-3">
            <fieldset>
                <label class="d-none">Description</label>
                <legend>Description</legend>
                <textarea asp-for="Description" rows="3" required></textarea>
            </fieldset>
                <partial name="../Partials/SmallComponents/InputValidation.cshtml" />
        </div>
        <div class="form-input mb-3">
            <fieldset>
                <legend>In Stock</legend>
                <label class="d-none">Stock</label>
                <input asp-for="AmountInStock" type="number" required />
                <partial name="../Partials/SmallComponents/InputValidation.cshtml" />
            </fieldset>
        </div>


        <p class="m-0 p-0 fw-semibold text-grey fs-5">Tags</p>
        @foreach (SelectListItem item in ViewBag.Tags)
        {
            <div class="mb-2">
                <input type="checkbox" value="@item.Text" checked="@item.Selected" name="Tags" id="product-tags-@item.Value">
                <label for="product-tags-@item.Value" class="text-capitalize user-select-none">@item.Text</label>
            </div>
        }
        <p class="m-0 p-0 fw-semibold text-grey fs-5">Sizes</p>
        @foreach(SelectListItem item in ViewBag.Sizes)
        {
            <div class="mb-2">
                <input type="checkbox" value="@item.Text" checked="@item.Selected" name="Sizes" id="product-sizes-@item.Value">
                <label for="product-sizes-@item.Value" class="text-capitalize user-select-none">@item.Text</label>
            </div>
        }
        <p class="m-0 p-0 fw-semibold text-grey fs-5">Colors</p>
        @foreach (SelectListItem item in ViewBag.Colors)
        {
            <div class="mb-2">
                <input type="checkbox" value="@item.Text" checked="@item.Selected" name="Colors" id="product-colours-@item.Value">
                <label for="product-colours-@item.Value" class="text-capitalize user-select-none">@item.Text</label>
            </div>
        }
        <p class="m-0 p-0 fw-semibold text-grey fs-5">Categories</p>
        @foreach (SelectListItem item in ViewBag.Categories)
        {
            <div class="mb-2">
                <input type="checkbox" value="@item.Text" checked="@item.Selected" name="Categories" id="product-categories-@item.Value">
                <label for="product-categories-@item.Value" class="text-capitalize user-select-none">@item.Text</label>
            </div>
        }

@*        <div class="form-group mb-4">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl">
            <span asp-validation-for="ImageUrl"></span>
        </div>*@
        <button class="my-4 btn-theme">Save</button>
    </form>
</section>