@using Manero_WebApp.ViewModels.HomeViewModels;
@using Manero_WebApp.ViewModels.ProductsViewModels;
@model CategoriesViewModel

<partial name="/Views/Partials/FullScreenComponents/Navbars/_TopNavbar.cshtml" />

@if (Model.Categories?.Count() > 0)
{
    <div class="d-flex flex-nowrap gap-1 overflow-auto my-3 justify-content-xl-center" style="white-space: nowrap;">
        @foreach (var item in Model.Categories)
        {
            <a asp-controller="products" asp-action="categories" asp-route-category="@item.Title" class="category-filter-button">@item.Title</a>
        }
    </div>
}
else
{
    <h3 class="text-center">No categories yet.</h3>
}

@if (Model.Categories?.Count() > 0)
{
    <div class="category-tile-container">
        @if (Model.Categories?.Count() > 0)
        {
            @foreach (var item in Model.Categories)
            {
                <a asp-controller="products" asp-action="categories" asp-route-category="@item.Title" class="category-tile">
                    <img class="category-tile-image" src="@item.ImageUrl" alt="@item.Title">
                    <div class="position-absolute bottom-0 start-0 p-2 m-2 z-4">
                        <h2 class="text-capitalize text-white fw-bold fs-4">@item.Title</h2>
                    </div>
                </a>
            }

        }
    </div>
}
@if (Model.Products?.Count() > 0)
{
    <section class="bestsellers-desktop mb-5 mt-2">
        <div class="container">
            <div class="products">
                @foreach (var product in Model.Products)
                {
                    <div class="product-card">
                        <partial name="~/Views/Partials/SmallComponents/ProductCards/_ProductCardBestSeller.cshtml" model="product" />
                    </div>
                }
            </div>
        </div>
    </section>
    ﻿
    <section class="bestsellers-mobile mb-5 mt-2">
        <div class="container">
            <div class="products">
                @foreach (var product in Model.Products)
                {
                    <div class="product-card">
                        <partial name="~/Views/Partials/SmallComponents/ProductCards/_ProductCardBestSeller.cshtml" model="product" />
                    </div>
                }
            </div>
        </div>
    </section>
}