<div class="Showcase-mobile">
    <div class="container">
        <div class="slider-container">
            <div class="slider">
                <div class="slide">
                    <img src="https://placehold.co/375x300?text=1">
                    <h1>Welcome to<br /> Manero! <br /> 50% off</h1>
                </div>
                <div class="slide">
                    <img src="https://placehold.co/375x300?text=2">
                </div>
                <div class="slide">
                    <img src="https://placehold.co/375x300?text=3">
                </div>
            </div>
        </div>
        <div class="dots">
            <span class="dot active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
    </div>
</div>

<div class="Showcase-desktop">
    <div class="container">
        <div class="slider-container">
            <div class="slider">
                <div class="slide">
                    <img src="https://placehold.co/800x600?text=1" alt="Showcase Image 1">
                    <h1>Welcome to<br> Manero!<br> 50% off</h1>
                </div>
                <div class="slide">
                    <img src="https://placehold.co/800x600?text=2" alt="Showcase Image 2">
                </div>
                <div class="slide">
                    <img src="https://placehold.co/800x600?text=3" alt="Showcase Image 3">
                </div>
            </div>
        </div>
        <div class="dots">
            <span class="dot active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
    </div>
</div>



<script>
    document.addEventListener('DOMContentLoaded', function () {
        const showcases = document.querySelectorAll('.Showcase-mobile, .Showcase-desktop');

        showcases.forEach((showcase) => {
            const slider = showcase.querySelector('.slider');
            const dots = showcase.querySelectorAll('.dot');
            let currentIndex = 0;

            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    slider.style.transform = `translateX(-${100 * index}%)`;
                    dots[currentIndex].classList.remove('active');
                    dot.classList.add('active');
                    currentIndex = index;
                });
            });
        });
    });

</script>