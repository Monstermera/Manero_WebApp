@* 
    Example to call for the partial

    <partial name="/Views/Partials/SmallComponents/ReviewCards/_ReviewCard.cshtml" model="{Enter your ReviewModel here}" />
*@




@model ReviewModel

<div class="review-card">
    <div class="profile-image">
        <img src="@Model.User.ProfileImgUrl" alt="">
    </div>
    <div class="review">
        <div class="review-header">
            <h5>@Model.User.FullName</h5>
            <div class="star-rating">
                @for(int i = 0; i < Model.Rating; i++)
                {
                    <i class="fa-solid fa-star"></i>
                }
                @if((5 - Model.Rating) > 0)
                {
                    @for (int i = 0; i < (5 - Model.Rating); i++)
                    {
                        <i class="fa-light fa-star"></i>
                    }
                }
            </div>
        </div>
        <h6 class="date">@Model.DateCreated</h6>
        <p>@Model.ReviewDescription</p>
    </div>
</div>