@using Manero_WebApp.ViewModels;
@{
    ViewData["UserName"] = ViewData["FullName"];
    ViewData["UserEmail"] = ViewData["Email"];
    ViewData["pageTitle"] = "Admin Panel";
    DecisionModalViewModel signOutModal = new()
            {
                Message = "Are you sure you want to sign out?",
                Controller = "Account",
                Action = "Logout"
            };
}

<partial name="/Views/Partials/FullScreenComponents/Navbars/_TopNavbar.cshtml" />

<section class="profilePage">
    <div class="personalInfo">
        <div class="vertical-line"></div>
        <partial name="/Views/Partials/SmallComponents/Icons/_ProfilePicFrame.cshtml" />
        <p class="userName">@ViewData["UserName"]</p>
        <p class="userEmail">@ViewData["UserEmail"]</p>
    </div>
    <div class="navigation">
        <div class="navItemContainer">
            <a asp-controller="Admin" asp-action="ProductCrud" class="navItem">
                <i class="fa-light fa-barcode"></i>
                <p>Product CRUD</p>
                <i class="fa-light fa-chevron-right"></i>
            </a>
            <a asp-controller="Admin" asp-action="UserManager" class="navItem">
                <i class="fa-light fa-user-gear"></i>
                <p>User Manager</p>
                <i class="fa-light fa-chevron-right"></i>
            </a>
            <a asp-controller="Admin" asp-action="TagsCategories" class="navItem">
                <i class="fa-light fa-tag"></i>
                <p>Tags & Categories</p>
                <i class="fa-light fa-chevron-right"></i>
            </a>
            <a asp-controller="Admin" asp-action="MyPromocodes" class="navItem">
                <i class="fa-light fa-gift"></i>
                <p>Promocodes</p>
                <i class="fa-light fa-chevron-right"></i>
            </a>
            <a class="navItem" onclick="openDesicionModal()">
                <i class="fa-light fa-arrow-right-from-bracket"></i>
                <p>Sign out</p>
                <i class="fa-light fa-chevron-right"></i>
            </a>

        </div>
    </div>
</section>
<partial name="/Views/Partials/FullScreenComponents/Footer/_Footer.cshtml" />

