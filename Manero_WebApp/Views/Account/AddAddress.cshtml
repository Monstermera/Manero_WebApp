}
@model AddressViewModel

<partial name="/Views/Partials/FullScreenComponents/Navbars/_TopNavbar.cshtml" />

<section class="add-address-section">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d65225.040692659415!2d15.12005500395917!3d59.27813517740799!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465c017f144aff39%3A0xcfe3b0bad018c93e!2zw5ZyZWJybw!5e0!3m2!1sen!2sse!4v1699367940855!5m2!1sen!2sse" width="600" height="390" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

    <form class="container" method="post" action="">
        <div class="form-input">
            <fieldset>
                <legend>Title</legend>
                <input asp-for="AddressTitle" type="text" id="text" required>
            </fieldset>
        </div>

        <div class="form-input">
            <fieldset>
                <legend>Streetname</legend>
                <input asp-for="StreetName" type="text" id="text" required>
            </fieldset>
        </div>
        <div class="form-input">
            <fieldset>
                <legend>Postalcode</legend>
                <input asp-for="PostalCode" type="text" id="text" required>
            </fieldset>
        </div>
        <div class="form-input">
            <fieldset>
                <legend>City</legend>
                <input asp-for="City" type="text" id="text" required>
            </fieldset>
        </div>
        <label class="checkbox">
            <input type="checkbox" />
            Use current location
        </label>
        
        <button class="btn-theme" type="submit">save address</button>
    </form>
</section>

