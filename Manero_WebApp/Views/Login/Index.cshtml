@{
    ViewData["Title"] = "Sign in";

}

<div class="login-section">
    <!-- Top section -->
    <div class="top-section">
        <a class="item left" asp-controller="Home" asp-action="Index">
            <i class="fa-solid fa-less-than"></i>
        </a>
        <p class="item middle">Sign in</p>
    </div>

    <!-- Vertical Black line -->
    <div class="vertical-line">
    </div>

    <!-- Big text -->
    <div class="big-text">
        <h3>Welcome Back!</h3>
        <p>Sign in to continue</p>
    </div>

    <form method="post" action="">
        <div asp-validation-summary="ModelOnly" class="text-danger error-message"></div>
        <partial name="~/Views/Partials/Forms/_EmailFormInput.cshtml" />
        <partial name="~/Views/Partials/Forms/_PasswordFormInput.cshtml" />
        <div class="remember-me">
            <label>
                <input type="checkbox" id="rememberMe">
                <div class="checkbox-box"></div>
                Remember me
            </label>

            <a href="#">Forgot password?</a>
        </div>

        <button class="btn-large btn-sign-in" type="submit">SIGN IN</button>
    </form>

    <!-- Sign up -->
    <div class="sign-up">
        <p>Don't have an account?</p>
        <a asp-controller="Register" asp-action="Index">Sign up.</a>
    </div>

    <!-- External links -->
    <div class="social-links">
        <a href="" class="customSocialIcon">
            <i class="fa-brands fa-facebook-f" style="color: #3B5999;"></i>
        </a>
        <a href="#" class="customSocialIcon">
            <i class="fa-brands fa-twitter" style="color: #55ACEE;"></i>
        </a>

        @* Google Login *@
        <partial name="../Partials/SmallComponents/Icons/_GoogleLoginIcon" />
        
    </div>
</div>
