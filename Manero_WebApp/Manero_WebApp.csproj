<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="NewFolder\**" />
    <Content Remove="NewFolder\**" />
    <EmbeddedResource Remove="NewFolder\**" />
    <None Remove="NewFolder\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Contexts\" />
    <Folder Include="Helpers\Repositories\MainRepo\" />
    <Folder Include="Helpers\Services\" />
    <Folder Include="Models\Entities\" />
    <Folder Include="Models\Schemas\" />
    <Folder Include="ViewModels\ContactViewModels\" />
    <Folder Include="ViewModels\AccountViewModels\" />
    <Folder Include="ViewModels\HomeViewModels\" />
    <Folder Include="Views\Contact\" />
    <Folder Include="Views\Account\" />
    <Folder Include="Views\Partials\FullScreenComponents\BestSellers\" />
    <Folder Include="Views\Partials\FullScreenComponents\FeaturedProducts\" />
    <Folder Include="Views\Partials\FullScreenComponents\Footer\" />
    <Folder Include="Views\Partials\FullScreenComponents\NewsLetter\" />
    <Folder Include="Views\Partials\FullScreenComponents\SaleComponent\" />
    <Folder Include="Views\Partials\SmallComponents\ProductCards\" />
    <Folder Include="wwwroot\css\" />
    <Folder Include="wwwroot\Images\" />
    <Folder Include="wwwroot\scss\global\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="compilerconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="7.0.12" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.UI" Version="7.0.12" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.12" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="7.0.12">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
